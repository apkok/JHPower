<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/color_ee">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@drawable/circle_shape">

        <TextView
            android:id="@+id/tv_survey_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查勘单位:"
            android:textColor="@color/color_69"
            android:textSize="12sp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/tv_survey_company_content"
            app:layout_constraintTop_toTopOf="@id/tv_survey_company"
            app:layout_constraintLeft_toRightOf="@id/tv_survey_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="株洲市建华水电安装有限公司"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/color_69"
            />
        <TextView
            android:id="@+id/tv_number"
            app:layout_constraintTop_toBottomOf="@id/tv_survey_company"
            app:layout_constraintLeft_toLeftOf="@id/tv_survey_company"
            app:layout_constraintRight_toRightOf="@id/tv_survey_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编        号:"
            android:textSize="12sp"
            android:textColor="@color/color_69"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>