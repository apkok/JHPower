<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JHPower" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Appbar颜色-->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <!-- 状态栏颜色 -->
        <!--<item name="colorPrimaryDark">@color/white</item>-->
    </style>

    <style name="JHPower_survey_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="JHPower_survey_tv_top12" parent="JHPower_survey_tv">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="JHPower_survey_et">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_9c</item>
        <item name="android:textColorHint">@color/color_9c</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="JHPower_multiline_input_et">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_9c</item>
        <item name="android:textColorHint">@color/color_9c</item>
        <item name="android:minLines">3</item>
        <item name="android:maxLines">4</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>